<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ifba.mobile.controledevendas">

    <application
        android:allowBackup="true"
        android:label="Controle de Vendas"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ControleDeVendasActivity"
            android:label="Controle de Vendas"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CadastroClientesActivity"
            android:label="Cadastro de Clientes"
            android:parentActivityName=".ControleDeVendasActivity"></activity>
        <activity android:name=".CadastroComprasActivity"
            android:label="Cadastro de Compras"
            android:parentActivityName=".ControleDeVendasActivity"></activity>
    </application>

</manifest>